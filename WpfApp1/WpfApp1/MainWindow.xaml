        <Button x:Name="mns" Content="-" HorizontalAlignment="Left" Height="45" Margin="172,124,0,0" VerticalAlignment="Top" Width="82" Click="mns_Click"/>
        <Button x:Name="umn" Content="*" HorizontalAlignment="Left" Height="45" Margin="277,124,0,0" VerticalAlignment="Top" Width="82" Click="umn_Click"/>
        <Button x:Name="del" Content="/" HorizontalAlignment="Left" Height="45" Margin="391,124,0,0" VerticalAlignment="Top" Width="82" Click="del_Click"/>
        <TextBox x:Name="res" HorizontalAlignment="Left" Height="32" Margin="195,196,0,0" TextWrapping="Wrap" Text=" " VerticalAlignment="Top" Width="127"/>

    </Grid>
</Window>
